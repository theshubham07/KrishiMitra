<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/captureFragment">

    <fragment
        android:id="@+id/captureFragment"
        android:name="com.example.krishimitra.Fragments.CaptureFragment"
        android:label="fragment_capture"
        tools:layout="@layout/fragment_capture">
    <action
        android:id="@+id/action_captureFragment_to_resultFragment"
        app:destination="@id/resultFragment" />
    </fragment>

    <fragment
        android:id="@+id/resultFragment"
        android:name="com.example.krishimitra.Fragments.ResultFragment"
        tools:layout="@layout/fragment_result">

        <argument
            android:name="imageUri"
            app:argType="string" />

        <argument
            android:name="label"
            app:argType="string" />

    </fragment>



    <fragment
        android:id="@+id/historyFragment"
        android:name="com.example.krishimitra.Fragments.HistoryFragment"
        android:label="fragment_history"
        tools:layout="@layout/fragment_history" />
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.krishimitra.Fragments.ProfileFragment"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_profile" />

    <fragment
        android:id="@+id/aboutFragment"
        android:name="com.example.krishimitra.Fragments.About"
        android:label="fragment_about"
        tools:layout="@layout/fragment_about" />


</navigation>